<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.dartswithfriends">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.gmail.dartswithfriends.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.gmail.dartswithfriends.profile.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="landscape" />
        <activity android:name="com.facebook.LoginActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />


        <activity
            android:name="com.gmail.dartswithfriends.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" />


        <activity
            android:name="com.gmail.dartswithfriends.selection.GameSelectionActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.gmail.dartswithfriends.selection.Select501301Activity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.gmail.dartswithfriends.scoreboard.Scoreboard501301Activity"
            android:label="@string/title_activity_scoreboard501301"
            android:parentActivityName="com.gmail.dartswithfriends.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.gmail.dartswithfriends.selection.OpponentSelectionActivity"
            android:label="@string/title_activity_opponent_selection"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.gmail.dartswithfriends.selection.Score501301Selection"
            android:label="@string/title_activity_score501301_selection"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.gmail.dartswithfriends.scoreboard.ScoreboardCricketActivity"
            android:label="@string/title_activity_scoreboard_cricket"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.gmail.dartswithfriends.profile.FriendSelectionActivity"
            android:label="@string/title_activity_friend_selection"
            android:screenOrientation="landscape" />
    </application>

</manifest>
